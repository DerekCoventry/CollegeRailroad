<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/place_autocomplete_prediction_primary_text_highlight"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:textAlignment="center"
    android:visibility="visible"
    tools:context=".DisplayMessageActivity">

    <Button
        android:id="@+id/add_but"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Book" />

    <TextView
        android:id="@+id/filterLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter by Location:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="12sp" />

    <Spinner
        android:id="@+id/editlocation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtLocation"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="0dp"
        android:background="?android:attr/colorButtonNormal"
        android:fadingEdge="vertical"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:textAlignment="center"
        android:visibility="visible" />

    <TextView
        android:id="@+id/filterCondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter by Condition:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="12sp" />
    <Spinner
        android:id="@+id/editcondition"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtLocation"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="0dp"
        android:background="?android:attr/colorButtonNormal"
        android:fadingEdge="vertical"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:textAlignment="center"
        android:visibility="visible" />
    <Button
        android:id="@+id/map_but"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Map of Books" />
    <TextView
        android:id="@+id/numberOfResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge" />
    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/book_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
